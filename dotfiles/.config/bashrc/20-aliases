# -----------------------------------------------------
# ALIASES
# -----------------------------------------------------

# -----------------------------------------------------
# Basics
# -----------------------------------------------------
alias ls="ls --color=auto"

# -----------------------------------------------------
# tmux
# -----------------------------------------------------
alias tm="tmux new-session \; split-window -h -p 50 \; select-pane -L \; attach"

# -----------------------------------------------------
# Kitty
# -----------------------------------------------------

[ "$TERM" = "xterm-kitty" ] && alias ssh="kitty +kitten ssh"
